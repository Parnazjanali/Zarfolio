{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Frontend (Vite)",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "group": "frontendGroup"
      },
      "runOptions": { "runOn": "folderOpen" }
    },
    {
      "label": "Run Backend - API Gateway",
      "type": "shell",
      "command": "go run cmd/main.go",
      "options": {
        "cwd": "${workspaceFolder}/backend/src/apiGateway"
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "group": "apiGatewayGroup"
      },
      "runOptions": { "runOn": "folderOpen" }
    },
    {
      "label": "Run Backend - Profile Manager",
      "type": "shell",
      "command": "go run cmd/main.go",
      "options": {
        "cwd": "${workspaceFolder}/backend/src/profileManager"
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "group": "profileManagerGroup"
      },
      "runOptions": { "runOn": "folderOpen" }
    },
    {
      "label": "Run Backend - CRM Manager",
      "type": "shell",
      "command": "go run cmd/main.go",
      "options": {
        "cwd": "${workspaceFolder}/backend/src/crmManager"
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "group": "crmManagerGroup" 
      },
      "runOptions": { "runOn": "folderOpen" }
    },
    {
      "label": "Run All Services",
      "dependsOn": [
        "Run Frontend (Vite)",
        "Run Backend - API Gateway",
        "Run Backend - Profile Manager",
        "Run Backend - CRM Manager"
      ],
      "dependsOrder": "parallel",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}